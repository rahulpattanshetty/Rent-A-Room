<h2>Add Room Details</h2>

<%=form_for @room do |f|%>
	
	<%if @room.errors.any?%>

		<h2><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h2>
		<ul>
		<%@room.errors.full_messages.each do |msg|%>
			<li><%=msg%></li>
			<%end%>
			</ul>
	<%end%>

	<%=f.label :name%><br>
	<%=f.text_field :name, placeholder:"Enter the hotel name"%><br>

	<%=f.label :description%><br>
	<%=f.text_area :description%><br>

	<%=f.label :price%><br>
	<%=f.text_field :price%><br>

	<%=f.label :rules%><br>
	<%=f.text_area :rules%><br>

	<%=f.label :address%><br>
	<%=f.text_area :address%><br>

	<%=f.label :image_url%><br>
	<%=f.file_field :images%><br>

	<%=f.label :city%><br>
	<%=f.collection_select :city_id,City.all,:id,:name%><br>


	<%=f.submit "Add room" %><br>
	

<%end%>